<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:padding="5dp"
            android:text="Actividad"
            android:textSize="30sp"
            android:textColor="@color/LightWhite"
            android:textStyle="normal"
            android:textAlignment="center"
            android:id="@+id/textoSuperior"
            android:layout_height="wrap_content"
            android:background="@color/LightBlack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline4"
            app:layout_constraintEnd_toStartOf="@id/guideline5"
            app:layout_constraintTop_toTopOf="@id/guideline3"
            app:layout_constraintVertical_bias="0.0"
            android:layout_width="0dp" android:gravity="center_horizontal"/>

    <EditText
            android:hint="Escribe aquÃ­"
            android:textSize="20sp"
            android:textStyle="italic"
            android:id="@+id/textEdit"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintEnd_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/textoSuperior"
            android:layout_width="0dp"/>

    <Button
            android:id="@+id/BlueButton"
            android:layout_marginTop="15dp"
            android:textSize="30sp"
            android:textColor="@color/LightWhite"
            android:textStyle="normal"
            android:textAlignment="center"
            android:background="@drawable/boton_azul"
            android:layout_height="40dp"
            android:text="Blue"
            app:layout_constraintStart_toStartOf="@id/guideline4"
            app:layout_constraintEnd_toStartOf="@id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/textEdit"
            android:layout_width="0dp" android:gravity="center_horizontal"/>

    <Button
            android:id="@+id/RedButton"
            android:layout_marginTop="30dp"
            android:textSize="30sp"
            android:textColor="@color/LightWhite"
            android:textStyle="normal"
            android:textAlignment="center"
            android:background="@drawable/boton_rojo"
            android:layout_height="40dp"
            android:text="Red"
            app:layout_constraintStart_toStartOf="@id/guideline4"
            app:layout_constraintEnd_toStartOf="@id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/BlueButton"
            android:layout_width="0dp" android:gravity="center_horizontal"/>

    <Button
            android:id="@+id/GreenButton"
            android:layout_marginTop="30dp"
            android:textSize="30sp"
            android:textColor="@color/LightWhite"
            android:textStyle="normal"
            android:textAlignment="center"
            android:background="@drawable/boton_verde"
            android:layout_height="40dp"
            android:text="Green"
            app:layout_constraintStart_toStartOf="@id/guideline4"
            app:layout_constraintEnd_toStartOf="@id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/RedButton"
            android:layout_width="0dp" android:gravity="center_horizontal"/>

    <Button
            android:id="@+id/PurpleButton"
            android:layout_marginTop="30dp"
            android:textSize="30sp"
            android:textColor="@color/LightWhite"
            android:textStyle="normal"
            android:textAlignment="center"
            android:background="@drawable/boton_morado"
            android:layout_height="40dp"
            android:text="Purple"
            app:layout_constraintStart_toStartOf="@id/guideline4"
            app:layout_constraintEnd_toStartOf="@id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/GreenButton"
            android:layout_width="0dp" android:gravity="center_horizontal"/>

    <Button
            android:id="@+id/PinkButton"
            android:layout_marginTop="30dp"
            android:textSize="30sp"
            android:textColor="@color/LightWhite"
            android:textStyle="normal"
            android:textAlignment="center"
            android:background="@drawable/boton_rosa"
            android:layout_height="40dp"
            android:text="Pink"
            app:layout_constraintStart_toStartOf="@id/guideline4"
            app:layout_constraintEnd_toStartOf="@id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/PurpleButton"
            android:layout_width="0dp" android:gravity="center_horizontal"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.23"
    />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.77"
    />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05"
    />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1"
    />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9"
    />

</androidx.constraintlayout.widget.ConstraintLayout>